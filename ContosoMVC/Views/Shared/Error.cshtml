@model System.Web.Mvc.HandleErrorInfo

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Error.</h1>
        <h2>An error occurred while processing your request.</h2>
        <h2>Exception Details: @Model.Exception.Message</h2>
        <h2>Controller where the exception happened: @Model.ControllerName</h2>
        <h2>Action Method where the exception happened @Model.ActionName</h2>




    </hgroup>
</body>
</html>
